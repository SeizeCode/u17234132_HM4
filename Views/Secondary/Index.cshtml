@model IEnumerable<WebApplication2.Models.SecondaryDatabase.SecondaryModel>

@{
    ViewBag.Title = "Index";
}
<body style="background-color:lightblue;text-align:left;">
      @foreach (WebApplication2.Models.SecondaryDatabase.SecondaryModel S in Model)
    {
        @*<h2>@primary.hello() </h2>*@
    <span style="font-family:'Microsoft YaHei'">@S.WelcomeMessage()</span> <br>
    }
    <h3><b>List of Secondary Education Level Applicants</b></h3>@DateTime.Now<span class="btn-danger"> @Html.ActionLink("Log out", "Index", "Administator")</span>
    <hr />
    <div class="col-sm-4">
        @using (Html.BeginForm("Names", "Secondary", FormMethod.Get))
        {

            @Html.TextBox("searchname")<input type="submit" value="Search" />
            <span>Search Name</span>

        }

    </div>
    <br /><br />
    <table class="table table-bordered" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:smaller">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.mID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mSurnname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mID_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mHome_Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Parent_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contact_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First_Additional)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Current_School)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mGrade)
            </th>
            <th class="list-group">
                @Html.DisplayNameFor(model => model.Subjects)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="table table-hover" style="font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;font-size:medium">
                <td>
                    @Html.DisplayFor(modelItem => item.mID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mSurnname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mID_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mHome_Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Parent_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contact_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.First_Additional)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Current_School)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mGrade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Subjects)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.mID })

                </td>
                <td> @Html.ActionLink("Details", "Details", new { id = item.mID })</td>
                <td> @Html.ActionLink("Delete", "Delete", new { id = item.mID })</td>
            </tr>
        }

    </table>
</body>
<a id="Download" class="btn btn-primary">Download List</a>